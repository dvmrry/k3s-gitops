---
apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: kube-vip
  namespace: kube-system
spec:
  selector:
    matchLabels:
      name: kube-vip-ds
  template:
    metadata:
      labels:
        name: kube-vip-ds
    spec:
      containers:
      - name: kube-vip
        image: plndr/kube-vip:0.3.5
        imagePullPolicy: IfNotPresent
        args:
        - manager
        env:
        - name: vip_arp
          value: "false"
        - name: vip_interface
          value: lo
        - name: port
          value: "6443"
        - name: vip_cidr
          value: "32"
        - name: cp_enable
          value: "true"
        - name: cp_namespace
          value: kube-system
        - name: vip_startleader
	  value: "false"
	- name: vip_loglevel
	  value: "5"
	- name: bgp_enable
	  value: "true"
	- name: bgp_routerinterface
	  value: "{{ kube_vip.router_interface }}"
        - name: bgp_peeraddress
	  value: "{{ kube_vip.bgp_peer_address }}"
	- name: bgp_peeras
	  value: "{{ kube_vip.bgp_peer_as }}"
	- name: bgp_asa
	  value: "{{ kube_vip.bgp_as }}"
        - name: vip_address
          value: "{{ k3s_registration_ip }}"
        securityContext:
          capabilities:
            add:
            - NET_ADMIN
            - NET_RAW
            - SYS_TIME
      hostNetwork: true
      nodeSelector:
        node-role.kubernetes.io/master: "true"
      serviceAccountName: kube-vip
      tolerations:
      - effect: NoSchedule
        key: node-role.kubernetes.io/master
        operator: Exists

