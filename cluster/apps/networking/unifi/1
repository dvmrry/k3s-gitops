---
apiVersion: helm.toolkit.fluxcd.io/v2beta1
kind: HelmRelease
metadata:
  name: unifi
  namespace: networking
spec:
  interval: 5m
  chart:
    spec:
      # renovate: registryUrl=https://k8s-at-home.com/charts/
      chart: unifi
      version: 4.2.0
      sourceRef:
        kind: HelmRepository
        name: k8s-at-home-charts
        namespace: flux-system
      interval: 5m
  values:
    image:
      repository: jacobalberty/unifi
      tag: v6.2.26

    env:
      TZ: "America/New York"

    service:
      main:
        annotations:
          traefik.ingress.kubernetes.io/service.serversscheme: https
        type: LoadBalancer
        externalIPs:
          - 172.25.0.40
        externalTrafficPolicy: Local

    ingress:
      main:
        enabled: true
        ingressClassName: "traefik"
        hosts:
        - host: unifi.mrry.io
          paths:
            - path: /
        tls:
        - hosts:
          - unifi.mrry.io

    persistence:
      data:
        enabled: true
        existingClaim: unifi-config

    resources:
      requests:
        cpu: "0.02"
        memory: "1024M"
      limits:
        memory: "1536M"

    mongodb:
      enabled: true
      architecture: standalone
      auth:
        enabled: false
      persistence:
        enabled: true
        existingClaim: unifi-mongodb
